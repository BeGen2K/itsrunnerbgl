@model ItsRunnerBgl.ViewModels.ActivityStringViewModel
@{
    ViewData["Title"] = "Iscrizione attività da URL";
}
<h4>Inserire l'endpoint URL per partecipare alla gara:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="JoinByUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="EndPointUrl" class="form-control" />
                <span asp-validation-for="EndPointUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Iscriviti" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
